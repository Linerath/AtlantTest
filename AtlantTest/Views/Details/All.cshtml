@{
    ViewBag.Title = "Home";
}

<h2 style="margin-top: 2%">New detail</h2>

<div class="col-sm-10">

    <div class="form-group">
        <label for="name" class="col-form-label">Name</label>
        <input id="name" name="name" type="text" class="form-control" placeholder="Name" />
    </div>

    <div class="form-group">
        <label for="surname" class="col-form-label">Surname</label>
        <input id="surname" name="surname" type="text" class="form-control" placeholder="Surname" />
    </div>

    <div class="form-group">
        <label for="patronymic" class="col-form-label">Patronymic</label>
        <input id="patronymic" name="patronymic" type="text" class="form-control" placeholder="Patronymic" />
    </div>

    <button class="btn btn-secondary">Create</button>
</div>

<hr />

<div class="row tabled-row">
    <div class="col col-sm-12 card p-0" ng-app="DetailsApp" ng-controller="MainCtrl">

        <div class="card-header form-inline">
            <i class="fa fa-minus"></i>
            <h2 style="margin-left: 1%">All details</h2>
        </div>

        <table class="table table-striped table-hover card-body" style="margin-bottom: 0px">
                <thead class="table-dark">
                    <tr>
                        <th>NomenclatureCode</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>StorekeeperId</th>
                        <th>CreationDate</th>
                        <th>DeleteDate</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="d in details">
                        <td>{{d.NomenclatureCode}}</td>
                        <td>{{d.Name}}</td>
                        <td>{{d.Quantity}}</td>
                        <td>{{d.StorekeeperId}}</td>
                        <td>{{d.CreationDate}}</td>
                        <td>{{d.DeleteDate}}</td>
                        <td><a href="#"><i class="fa fa-user-times"></i></a></td>
                    </tr>
                </tbody>
            </table>

    </div>
</div>

@section scripts{
    <script src="~/Scripts/app/DetailsApp.js"></script>
}