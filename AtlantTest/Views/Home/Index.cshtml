@{
    ViewBag.Title = "Home";
}

<div class="row">

    <input type="text" class="form-control" placeholder="Name"/>

</div>

<div class="row card" ng-app="MainApp" ng-controller="MainCtrl">

    <div class="card-header">
        <h2>All storekeepers</h2>
    </div>

        <table class="table table-hover card-body">
            <thead class="table-dark">
                <tr>
                    <td>Name</td>
                    <td>Surname</td>
                    <td>Patronymic</td>
                    <td>Delete</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="s in storekeepers">
                    <td>{{s.Name}}</td>
                    <td>{{s.Surname}}</td>
                    <td>{{s.Patronymic}}</td>
                    <td><a href="#">D</a></td>
                </tr>
            </tbody>
        </table>

</div>

@section scripts{
    <script src="~/Scripts/app/MainApp.js"></script>
}