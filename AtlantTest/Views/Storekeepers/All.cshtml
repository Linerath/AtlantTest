@{
    ViewBag.Title = "Home";
}

<h2 style="margin-top: 2%">New storekeeper</h2>

<div class="new-section-col-1">

    <div class="form-group">
        <label for="name" class="col-form-label">Name</label>
        <input id="name" name="name" type="text" class="form-control" placeholder="Name" />
    </div>

    <div class="form-group">
        <label for="surname" class="col-form-label">Surname</label>
        <input id="surname" name="surname" type="text" class="form-control" placeholder="Surname" />
    </div>

    <div class="form-group">
        <label for="patronymic" class="col-form-label">Patronymic</label>
        <input id="patronymic" name="patronymic" type="text" class="form-control" placeholder="Patronymic" />
    </div>

    <button class="btn btn-secondary"><i class="fa fa-user-plus"></i> Create</button>
</div>

<hr />

<div class="row tabled-row">
    <div class="col col-sm-12 card p-0" ng-controller="StorekeepersCtrl" ng-init="getStorekeepers()">

        <div id="tableHeader" class="card-header form-inline" data-toggle="collapse" data-target="#detailsTable" aria-expanded="false">
            <i id="panelInd" class="fa fa-minus"></i>
            <h2 style="margin-left: 1%">All storekeepers</h2>
        </div>

        <div class="collapse" id="detailsTable">
            <table class="table table-striped table-hover card-body" style="margin-bottom: 0px">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Patronymic</th>
                        <th>Details quantity</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="s in storekeepersData">
                        <td>{{s.Storekeeper.Name}}</td>
                        <td>{{s.Storekeeper.Surname}}</td>
                        <td>{{s.Storekeeper.Patronymic}}</td>
                        <td>{{s.DetailsQuantity}}</td>
                        <td><a href="#"><i class="fa fa-user-times"></i></a></td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>

@section scripts{

    <script>
        $(document).ready(function () {

            $("#tableHeader").click(function () {
                var i = $("#panelInd");
                console.log(i);
                if (i.hasClass("fa-minus")) {
                    i.removeClass("fa-minus");
                    i.addClass("fa-plus");
                }
                else {
                    i.removeClass("fa-plus");
                    i.addClass("fa-minus");
                }
            });
        });
    </script>
}